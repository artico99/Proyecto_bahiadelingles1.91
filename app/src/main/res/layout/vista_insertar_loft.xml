<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/conte"
    android:background="#6D81CC">

    <LinearLayout
        android:id="@+id/linearAgregarLoft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#6D81CC"
        android:paddingBottom="100sp"
        android:padding="20dp"
        >

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar nuevo Loft"
            android:textSize="20dp"
            android:textAlignment="center"
            android:paddingBottom="20sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20sp"
            android:paddingTop="20sp">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NumeroLoft"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtNumLoftInsert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/viewNombreCliente"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre Loft"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtNombreLoftInsert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="ingresar nombre"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/viewComentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Comentario Loft"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edtComentarioLoftInsert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="ingresar comentario"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="50dp">

            <Button
                android:id="@+id/btnVolver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_on_surface_stroke"
                android:text="Volver" />

            <Button
                android:id="@+id/btnRegis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/material_on_surface_stroke"
                android:text="Agregar" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>